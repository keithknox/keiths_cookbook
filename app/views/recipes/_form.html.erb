<%=form_for @recipe do |f| %>
  <% if @recipe.errors.any? %>
    <div id = "error_explanation">
      <h2>
        <%=pluralize(@recipe.errors.count, "error") %>
        prohibited this article from being saved:
      </h2>
      <ul>
        <% @recipe.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

      <p>
        <%=f.label :title %>
        <%=f.text_field :title %>
      </p>

      <p>
        <%=f.label :body %>
        <%=f.text_area :body %>
      </p>

      <p>
        <%=f.submit %>
      </p>

      <% end %>
      
